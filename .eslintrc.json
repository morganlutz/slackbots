{
    "env": {
        "es6": true,
        "node": true
    },
    "excludes": ["*/node_modules/**"],
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": ["error", {
            "varsIgnorePattern": "^_",
            "argsIgnorePattern": "^_"
        }],
        "no-console": ["error", {
            "allow": ["log", "error"]
        }]
    }
}
